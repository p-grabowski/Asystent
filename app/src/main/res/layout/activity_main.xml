<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wybierz zbiór:"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/textbutton"
        android:textStyle="bold"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

        <TableRow>

            <Spinner
                android:id="@+id/zbior"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp" />

            <Button
                android:id="@+id/bT_usun_zbior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bluebutton"
                android:text="Usuń zbiór"
                android:textColor="@color/textbutton"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <TableRow>
            <EditText
                android:id="@+id/eT_nazwa_zbior"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="Nazwa zbioru"
                android:inputType="text"
                android:textColorHint="@color/edittext"/>
            <Button
                android:background="@drawable/bluebutton"

                android:id="@+id/bT_dodaj_zbior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dodaj zbiór"
                android:textColor="@color/textbutton"
                />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/punkty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/bluebutton"
        android:text="Punkty"
        android:textColor="@color/textbutton"
        android:textSize="30dp" />

    <Button
        android:background="@drawable/bluebutton"
        android:id="@+id/obliczenia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Obliczenia"
        android:textSize="30dp"
        android:textColor="@color/textbutton"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="bottom"
        android:layout_marginBottom="600dp"
        android:textAlignment="center"
        android:textColor="@color/texttextview"
        android:textStyle="bold"
        android:text="wykonał Przemysław Grabowski" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  "/>
</LinearLayout>

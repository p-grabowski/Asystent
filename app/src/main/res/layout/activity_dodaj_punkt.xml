<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.z370.asystent.Dodaj_punkt"
    android:orientation="vertical">

    <EditText
        android:id="@+id/eT_dodaj_Nazwa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NAZWA"
        android:inputType="text"
        android:textColorHint="#0000ff"/>
    <EditText
        android:id="@+id/eT_dodaj_X"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="X"
        android:inputType="numberDecimal"
        android:textColorHint="#0000ff"/>
    <EditText
        android:id="@+id/eT_dodaj_Y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Y"
        android:inputType="numberDecimal"
        android:textColorHint="#0000ff"/>
    <EditText
        android:id="@+id/eT_dodaj_H"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="H"
        android:inputType="numberDecimal"
        android:textColorHint="#0000ff"/>
    <Button
        android:id="@+id/bT_dodaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dodaj punkt"
        android:textColor="#0000ff"
        android:textSize="20dp" />
    <Button
        android:id="@+id/bT_dodaj_wroc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wroÄ‡"
        android:textColor="#0000ff"
        android:textSize="10dp"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/background">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".katclp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:text="?"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/bT_pomoc_katclp"
                    android:background="@drawable/yellowbutton"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:text="Kąt C L P"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:textColor="@color/texttextview2"/>
            </TableRow>
        </TableLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Punkt C:"
            android:textColor="@color/edittext"
            android:textColorHint="@color/edittext"/>
        <AutoCompleteTextView
            android:id="@+id/eT_nazwa_C_katclp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nazwa"
            android:inputType="text"
            android:textColor="@color/edittext"
            android:textColorHint="@color/edittext"/>
        <EditText
            android:id="@+id/eT_CX_katclp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="X"
            android:inputType="numberDecimal"
            android:textColor="@color/edittext"
            android:textColorHint="@color/edittext"/>

        <EditText
            android:id="@+id/eT_CY_katclp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Y"
            android:inputType="numberDecimal"
            android:textColor="@color/edittext"
            android:textColorHint="@color/edittext" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Punkt L:"
            android:textColor="@color/edittext"
            android:textColorHint="@color/edittext"/>
        <AutoCompleteTextView
            android:id="@+id/eT_nazwa_L_katclp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nazwa"
            android:inputType="text"
            android:textColor="@color/edittext"
            android:textColorHint="@color/edittext"/>
        <EditText
            android:id="@+id/eT_LX_katclp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="X"
            android:inputType="numberDecimal"
            android:textColor="@color/edittext"
            android:textColorHint="@color/edittext" />


        <EditText
            android:id="@+id/eT_LY_katclp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Y"
            android:inputType="numberDecimal"
            android:textColor="@color/edittext"
            android:textColorHint="@color/edittext" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Punkt P:"
            android:textColor="@color/edittext"
            android:textColorHint="@color/edittext"/>
        <AutoCompleteTextView
            android:id="@+id/eT_nazwa_P_katclp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nazwa"
            android:inputType="text"
            android:textColor="@color/edittext"
            android:textColorHint="@color/edittext" />
        <EditText
            android:id="@+id/eT_PX_katclp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="X"
            android:inputType="numberDecimal"
            android:textColor="@color/edittext"
            android:textColorHint="@color/edittext"/>


        <EditText
            android:id="@+id/eT_PY_katclp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Y"
            android:inputType="numberDecimal"
            android:textColor="@color/edittext"
            android:textColorHint="@color/edittext" />


        <TextView
            android:id="@+id/tV_W_katclp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:hint="Kąt :"
            android:textSize="20dp"
            android:textColor="@color/textbutton"
            android:textColorHint="@color/textbutton"
            android:layout_marginBottom="20dp"/>


        <Button
            android:id="@+id/B_oblicz_katclp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Oblicz"
            android:background="@drawable/bluebutton"
            android:textColor="@color/textbutton"/>

        <Button
            android:id="@+id/B_wroc5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Wróć"
            android:background="@drawable/bluebutton"
            android:textColor="@color/textbutton"/>
    </LinearLayout>

</ScrollView>
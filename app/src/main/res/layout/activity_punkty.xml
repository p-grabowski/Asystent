<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Punkty"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lV_punkty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:isScrollContainer="true"></ListView>

        <Button
            android:id="@+id/bT_punkty_dodaj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dodaj punkt"
            android:textColor="#0000ff"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/eT_NAZWA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NAZWA"
            android:inputType="numberDecimal"
            android:textColorHint="#0000ff"/>
        <EditText
            android:id="@+id/eT_X"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="X"
            android:inputType="numberDecimal"
            android:textColorHint="#0000ff"/>
        <EditText
            android:id="@+id/eT_Y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Y"
            android:inputType="numberDecimal"
            android:textColorHint="#0000ff"/>
        <EditText
            android:id="@+id/eT_H"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="H"
            android:inputType="numberDecimal"
            android:textColorHint="#0000ff"/>
        <EditText
            android:id="@+id/eT_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID"
            android:inputType="numberDecimal"
            android:textColorHint="#0000ff"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="zamieÅ„"
            android:textColor="#0000ff"
            android:textSize="20dp"
            android:id="@+id/bT_punkty_zmien"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="usun"
            android:textColor="#0000ff"
            android:textSize="20dp"
            android:id="@+id/bT_punkty_usun"
            />

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="#ff0"/>
            <stroke
                android:color="#ff0"
                android:width="1dp"/>
            <corners
                android:radius="30dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#FFDF41"/>
            <stroke
                android:color="#FFDF41"
                android:width="1dp"/>
            <corners
                android:radius="30dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>